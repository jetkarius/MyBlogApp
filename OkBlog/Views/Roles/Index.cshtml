@model IEnumerable<OkBlog.Models.Db.ApplicationRole>
@{
    ViewBag.Title = "Список ролей";
}

<div class="container-page">
	<h2 class="title-margin">Список ролей</h2>
	<table class="table">
		<tr><th>Название</th><th>Описание</th>
		@foreach (var role in Model)
		{
			<tr>
				<td>
					@role.Name
				</td>
				<td>
					<textarea name="Description" class="form-control" rows="3" value="" readonly>@role.Description</textarea>
				</td>          
				<td>
					<form asp-action="Delete" asp-route-id="@role.Id" method="post">
						<button type="submit" class="btn btn-sm btn-danger float-right btn-mrg">
							Удалить
						</button>
						<a class="btn btn-sm btn-primary float-right btn-mrg" asp-action="EditRole" asp-route-id="@role.Id">Редактировать</a>
					</form>
				</td>
			</tr>
		}
	</table>
	<a class="btn btn-sm btn-primary" asp-action="Create">Добавить роль</a>
	<a class="btn btn-sm btn-primary" asp-action="UserList">Список пользователей</a>
</div>
