@using Microsoft.AspNetCore.Identity
@model OkBlog.ViewModels.EditRoleViewModel
@{

}

<div class="container-page">
	<h2 class="title-margin">Редактирование роли</h2>

	<form asp-action="EditRole" asp-controller="Roles">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<input type="hidden" asp-for="Id" />
		</div>
		<div class="form-group">
			<label asp-for="Name" class="control-label">Название</label>
			<input type="text" asp-for="Name" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Description" class="control-label">Описание</label>
			<input type="text" asp-for="Description" class="form-control" />
		</div>
		<div class="form-group">
			<input type="submit" value="Сохранить" class="btn btn-sm btn-primary" />
		</div>
	</form>

	<p>
		<a asp-action="Index">Перейти к списку всех ролей</a>
	</p>
</div>
