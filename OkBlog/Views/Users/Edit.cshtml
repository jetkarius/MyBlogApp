@using Microsoft.AspNetCore.Identity
@model OkBlog.ViewModels.EditUserViewModel
@{

}

<div class="container-page">
	<h2 class="title-margin">Редактирование пользователя</h2>

	<form asp-action="Edit" asp-controller="Users">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<input type="hidden" asp-for="Id" />
		</div>
		<div class="form-group">
			<label asp-for="FirstName" class="control-label">Имя</label>
			<input type="text" asp-for="FirstName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="LastName" class="control-label">Фамилия</label>
			<input type="text" asp-for="LastName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Email" class="control-label">Email</label>
			<input type="text" asp-for="Email" class="form-control" />
		</div>
		<div class="form-group">
			<input type="submit" value="Сохранить" class="btn btn-sm btn-primary" />
		</div>
	</form>
</div>
