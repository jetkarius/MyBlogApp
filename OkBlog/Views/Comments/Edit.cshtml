@model MainComment
@{

}

<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet"/>

<div class="container-page">
    <h2 class="title-margin">Редактирование комментария</h2>
    <br />
	<form asp-action="Edit" asp-controller="Comments" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="Created" type="hidden" />
        <input asp-for="Author" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <input asp-for="PostId" type="hidden" />
	    <div>
            <label class="title-size">Message</label>
            <div class="color">
                <textarea class="form-control" id="editor" rows="10" value="" asp-for="Message" ></textarea>
            </div>
        </div>
        <br />
        <input class="btn btn-sm btn-primary" type="submit" value="Сохранить" />
    </form>
    <br />
    <p class="float-right" style="margin: -55px 7px">
        <a href="##" onClick="history.go(-1); return false;">Назад</a> 
    </p>
</div>

@section scripts {
	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
	<script>
		$('#editor').trumbowyg();
	</script>
}